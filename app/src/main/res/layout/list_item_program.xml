<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="90dp">
    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="20sp"
        android:text="sdsdsdsd"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_init_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d3d3d3"
        android:textSize="17sp"
        android:text="sdsdsdsd"
        android:layout_alignBaseline="@+id/text_end_date"
        android:layout_alignBottom="@+id/text_end_date"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/text_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view"
        android:layout_alignStart="@+id/text_name"
        android:layout_marginBottom="13dp"
        android:text="sdsdsdsd"
        android:textColor="#d3d3d3"
        android:textSize="17sp" />

    <View android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:background="#d3d3d3"
        android:layout_width="fill_parent"
        android:id="@+id/view" />
</RelativeLayout>
