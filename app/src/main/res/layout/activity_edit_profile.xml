<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.strechyourbody.rammp.stretchbody.Activities.ProgramActivity">

    <include
        android:id="@+id/toobar"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="-31dp"
        tools:layout_editor_absoluteY="-36dp" />

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <EditText
                    android:id="@+id/User_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="80dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:background="@drawable/bg_edittext_focused"
                    android:text=""
                    android:hint="Nombre"
                    android:textColorHint="@color/placeholder"
                    />

                <EditText
                    android:id="@+id/user_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    android:layout_below="@+id/User_name"
                    android:background="@drawable/bg_edittext_focused"
                    android:layout_marginTop="15dp"
                    android:hint="Apellido"
                    android:textColorHint="@color/placeholder"/>

                <EditText
                    android:id="@+id/user_age"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="text|numberDecimal"
                    android:text=""
                    android:layout_below="@+id/user_lastName"
                    android:background="@drawable/bg_edittext_focused"
                    android:layout_marginTop="15dp"
                    android:hint="Edad"
                    android:textColorHint="@color/placeholder"/>

                <RadioGroup
                    android:id="@+id/radioGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_below="@+id/user_age"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <RadioButton
                        android:id="@+id/radio_hombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/placeholder"
                        android:text="Hombre" />

                    <RadioButton
                        android:id="@+id/radio_femenino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/placeholder"
                        android:text="Mujer" />

                    <RadioButton
                        android:id="@+id/radio_otro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/placeholder"
                        android:text="Otro" />
                </RadioGroup>

                <EditText
                    android:id="@+id/user_weight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="number"
                    android:text=""
                    android:background="@drawable/bg_edittext_focused"
                    android:layout_below="@+id/radioGender"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:hint="Peso"
                    android:textColorHint="@color/placeholder"/>

                <EditText
                    android:id="@+id/user_height"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="number"
                    android:text=""
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_edittext_focused"
                    android:hint="Altura"
                    android:textColorHint="@color/placeholder"
                    android:layout_below="@+id/user_weight"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <!--<Button-->
                    <!--android:id="@+id/change_password"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Cambiar constaseÃ±a"-->
                    <!--android:layout_alignBaseline="@+id/button_save"-->
                    <!--android:layout_alignBottom="@+id/button_save" />-->
                <Button
                    android:id="@+id/button_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    android:textColor="#ffffff"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/btn_primary"
                    android:layout_below="@+id/user_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>




