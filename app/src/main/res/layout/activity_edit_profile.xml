<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.strechyourbody.rammp.stretchbody.Activities.ProgramActivity">

    <include
        android:id="@+id/toobar"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="-31dp"
        tools:layout_editor_absoluteY="-36dp" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">


                <EditText
                    android:id="@+id/User_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="80dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />

                <EditText
                    android:id="@+id/user_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Last Name"
                    android:layout_below="@+id/User_name"
                    android:layout_alignStart="@+id/User_name" />

                <EditText
                    android:id="@+id/user_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text|numberDecimal"
                    android:text="Age"
                    android:layout_below="@+id/user_lastName"
                    android:layout_alignParentEnd="true"
                    android:layout_alignStart="@+id/user_lastName" />

                <RadioGroup
                    android:id="@+id/radioGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_below="@+id/user_age"
                    android:layout_alignStart="@+id/user_age">

                    <RadioButton
                        android:id="@+id/radio_hombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hombre" />

                    <RadioButton
                        android:id="@+id/radio_femenino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mujer" />

                    <RadioButton
                        android:id="@+id/radio_otro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Otro" />
                </RadioGroup>

                <EditText
                    android:id="@+id/user_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="Peso"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignStart="@+id/radioGender" />

                <EditText
                    android:id="@+id/user_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="Altura"
                    android:hint="Altura"
                    android:layout_below="@+id/user_weight"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="370dp"
                    android:layout_alignStart="@+id/user_weight" />

                <Button
                    android:id="@+id/button_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="39dp"
                    android:text="Guardar"
                    android:layout_below="@+id/user_height"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:id="@+id/change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cambiar constaseÃ±a"
                    android:layout_alignBaseline="@+id/button_save"
                    android:layout_alignBottom="@+id/button_save"
                    android:layout_alignStart="@+id/user_height" />
            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>




