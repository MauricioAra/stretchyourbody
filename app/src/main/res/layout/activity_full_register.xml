<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.strechyourbody.rammp.stretchbody.Activities.FullRegisterActivity">

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        tools:paddingTop="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/tVMainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tVStaticSmallLabel"
                android:layout_marginTop="5dip"
                android:textSize="18dp"
                android:text="Seleccione su parte del cuerpo con mas dolor"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <Spinner
                android:id="@+id/bodyPartSpinner"
                android:layout_width="match_parent"
                android:background="@drawable/bg_edittext_focused"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:hint="Ejercicios"
                android:textColorHint="@color/placeholder"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>


                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:hint="Edad"
                    android:inputType="number"
                    android:maxLines="1"
                    android:background="@drawable/bg_edittext_focused"
                    android:textColorHint="@color/placeholder" />

                <EditText
                    android:id="@+id/weight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:hint="Peso (Kg)"
                    android:inputType="number"
                    android:maxLines="1"
                    android:background="@drawable/bg_edittext_focused"
                    android:textColorHint="@color/placeholder"/>

                <EditText
                    android:id="@+id/height"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:hint="Altura (cm)"
                    android:inputType="number"
                    android:maxLines="1"
                    android:background="@drawable/bg_edittext_focused"
                    android:textColorHint="@color/placeholder" />


            <TextView
                android:id="@+id/genero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tVStaticSmallLabel"
                android:layout_marginTop="5dip"
                android:text="GÃ©nero"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <RadioGroup
                android:id="@+id/radioGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/user_age"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RadioButton
                    android:id="@+id/radio_hombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/placeholder"
                    android:text="Hombre" />

                <RadioButton
                    android:id="@+id/radio_femenino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/placeholder"
                    android:text="Mujer" />

                <RadioButton
                    android:id="@+id/radio_otro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/placeholder"
                    android:text="Otro" />
            </RadioGroup>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center|bottom">
            <Button
                android:id="@+id/continue_register_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continuar"
                android:background="#55DAE1"
                android:textColor="#ffffff"
                android:layout_alignParentBottom="true"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
