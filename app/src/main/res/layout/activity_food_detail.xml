<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.strechyourbody.rammp.stretchbody.Activities.LoginActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <include
        android:id="@+id/toobar"
        layout="@layout/toolbar"
        android:layout_height="56dp"
        android:layout_width="fill_parent" />

   <ScrollView
       android:id="@+id/food_scroller"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:paddingTop="50dp"
       android:layout_centerHorizontal="true">

       <RelativeLayout
           android:id="@+id/email_login_form"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           tools:paddingTop="@dimen/activity_horizontal_margin">

           <ImageView
               android:id="@+id/food_img"
               android:layout_width="match_parent"
               android:layout_height="120dp" />

           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="180dp"
               card_view:cardBackgroundColor="#fff"
               android:layout_alignParentTop="true"
               android:layout_marginTop="150dp"
               android:id="@+id/cardView3"
               android:minHeight="180dp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:paddingRight="10dp"
                   android:paddingLeft="10dp"
                   android:paddingTop="9dp">

                   <TextView
                       android:id="@+id/food_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="20sp"
                       android:textColor="#00b3ee"
                       android:text="Nombre comida"
                       android:layout_alignParentTop="true"
                       android:layout_alignParentLeft="true"
                       android:layout_alignParentStart="true" />
                   <TextView
                       android:id="@+id/food_description"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="16dp"
                       android:textSize="16dp"
                       android:text=""
                       android:layout_below="@+id/food_name"
                       android:layout_alignParentLeft="true"
                       android:layout_alignParentStart="true" />


               </RelativeLayout>

           </android.support.v7.widget.CardView>

       </RelativeLayout>

   </ScrollView>

</RelativeLayout>