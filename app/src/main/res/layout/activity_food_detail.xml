<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.strechyourbody.rammp.stretchbody.Activities.LoginActivity">
    <include
        android:id="@+id/toobar"
        layout="@layout/toolbar"
        android:layout_height="56dp"
        android:layout_width="fill_parent" />

   <ScrollView
       android:id="@+id/food_scroller"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:paddingTop="50dp"
       android:layout_centerHorizontal="true">

       <RelativeLayout
           android:id="@+id/email_login_form"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           tools:paddingTop="@dimen/activity_horizontal_margin">
           <TextView
               android:id="@+id/food_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:textColor="#00b3ee"
               android:text="Nombre comida"
               android:layout_below="@+id/food_img"
               android:layout_centerHorizontal="true" />
           <TextView
               android:id="@+id/food_description"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="45dp"
               android:text="Comida de ingredientes ingredientes ingredientes"
               android:layout_marginStart="29dp"
               android:layout_below="@+id/food_name"
               android:layout_alignParentStart="true" />

           <ImageView
               android:id="@+id/food_img"
               android:layout_width="match_parent"
               android:layout_height="120dp"
               android:src="@mipmap/ic_launcher"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:layout_marginTop="5dp" />
       </RelativeLayout>

   </ScrollView>

</RelativeLayout>