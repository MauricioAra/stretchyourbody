<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#ffffff">


    <ImageView android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/avatar_food_letter"
        android:layout_marginStart="14dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/food_name_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="20sp"
        android:text="Barritas de granola"
        android:layout_alignTop="@+id/avatar_food_letter"
        android:layout_toEndOf="@+id/avatar_food_letter"
        android:layout_marginStart="17dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOMBRE"
        android:textSize="11dp"
        android:layout_below="@+id/food_name_activity"
        android:layout_alignStart="@+id/food_name_activity" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="23dp"
        app:srcCompat="@drawable/ic_chev_left"
        android:visibility="invisible"/>


    <View android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:id="@+id/view" />

</RelativeLayout>